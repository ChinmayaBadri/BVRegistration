				<div class="row mb-3">
					<div class="col-md-6">
						*First Name<br />
						@Html.TextBox("First Name", null, new { @class = "form-control" })
					</div>
					<div class="col-md-6">
						*Last Name<br />
						@Html.TextBox("Last Name", null, new { @class = "form-control" })
					</div>
				</div>

				<div class="row mb-3">
					<div class="col-md-4">
						*Date of Birth (MM/DD/YYYY)<br />
						@Html.TextBox("Date of Birth ", null, new { @class = "form-control" })
					</div>
					<div class="col-md-4">
						*Grade (As of Fall 2018)<br />
						@Html.TextBox("Grade", null, new { @class = "form-control" })
					</div>
                    <div class="col-md-4">
                        Gender*<br />
                        @Html.RadioButton("Gender3", "Male")&nbsp;Male
                        @Html.RadioButton("Gender3", "Female")&nbsp;Female
                    </div>
				</div>
				<div class="row mb-3">
					<div class="col-md-12">
						Comments<br />
						@Html.TextBox("Comments", null, new { @class = "form-control" })
					</div>
				</div>
				<hr />
				<button class="btn btn-orange float-left" type="submit">Submit<i class="material-icons">check_circle</i></button>
</div>
	</div>
</div>

